<%= form_for(@category) do |f| %>
  <fieldset>
    <legend>Name</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  
  <fieldset>
    <legend>Additional Info</legend>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </fieldset>
  <%= f.submit %>
<% end %>