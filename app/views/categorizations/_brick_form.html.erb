<%= form_for([@brick, @categorization]) do |f| %>
  <fieldset>
    <legend>Brick</legend>
    <%= @brick.name %>
  </fieldset>
  
  <fieldset>
    <legend>Category</legend>
    <%= f.collection_select :category_id, @brick.potential_categories, :id, :name, :prompt => "Select a category please." %>
  </fieldset>
  
  <fieldset>
    <legend>Additional Info</legend>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </fieldset>
  
  <%= f.submit %>
<% end %>