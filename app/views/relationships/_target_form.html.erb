<% form_for([@brick, @relationship]) do |f| %>

  <fieldset>
    <legend>The Source</legend>
    <%= @brick.name %>
  </fieldset>

  <fieldset>
    <legend>What's the target?</legend>
    <%= f.collection_select :target_id, @brick.potential_targets, :id, :name, :prompt => "Select a target please." %>
  </fieldset>

  <fieldset>
    <legend>Additional Info.</legend>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </fieldset>

  <%= f.submit %>


<% end %>