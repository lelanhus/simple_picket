<% form_for(@relationship) do |f| %>

  <fieldset>
    <legend>The Source</legend>
    <%= f.collection_select :brick_id, @target.potential_sources, :id, :name, :prompt => "Select a source please." %>
  </fieldset>

  <fieldset>
    <legend>The Target</legend>
    <%= @target.name %>
    <%= f.hidden_field :target_id, :value => @target.id %>
  </fieldset>

  <fieldset>
    <legend>Additional Info.</legend>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </fieldset>

  <%= f.submit %>


<% end %>